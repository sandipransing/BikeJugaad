= content_for :stylesheets do
  = stylesheet_link_tag 'signin'
- provide(:title, 'Sign In')

.signin
  %h3 Sign in
  %hr.soften.margin_top_5px
  = form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f|
    %div
      = f.email_field :email, :autofocus => true, placeholder: 'Email', class: 'width_95_percent'
    %div
      = f.password_field :password, placeholder: 'Password', class: 'width_95_percent'
    - if devise_mapping.rememberable?
      %div
        = f.check_box :remember_me, class: 'remember_me'
        = f.label :remember_me
    %div= f.submit "Sign in", class: 'btn'
  = render "devise/shared/links"
