- provide(:title, 'Change your password')

.signin
  %h3 Change your password
  %hr.soften.margin_top_5px
  = form_for(resource, :as => resource_name, :url => password_path(resource_name), :html => { :method => :put }) do |f|
    = devise_error_messages!
    = f.hidden_field :reset_password_token
    %div
      = f.password_field :password, :autofocus => true, placeholder: "New password", class: 'width_75_percent'
    %div
      = f.password_field :password_confirmation, placeholder: "Confirm new password", class: 'width_75_percent'
    %div= f.submit "Change my password", class: 'btn'
  = link_to "Sign up", new_registration_path(resource_name), class: 'pull-right'
  .pull-right.margin_adjust= "|"
  = link_to "Sign in", new_session_path(resource_name), class: 'pull-right'
