- provide(:title, 'Sign In')

.signin
  %h3 Sign up
  %hr.soften.margin_top_5px
  = form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f|
    = devise_error_messages!
    %div
      = f.email_field :email, :autofocus => true, placeholder: 'Email', class: 'width_75_percent'
    %div
      = f.password_field :password, placeholder: 'Password', class: 'width_75_percent'
    %div
      = f.password_field :password_confirmation, placeholder: 'Confirm Password', class: 'width_75_percent'
    %div= f.submit "Sign up", class: 'btn'
  = link_to "Sign in", new_session_path(resource_name), class: 'pull-right'
