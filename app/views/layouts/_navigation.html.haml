.navbar
  %ul.nav.pull-right
    - if current_user
      %li
        %a{"data-toggle" => "modal", :href => "#create_deal"}
          %span.btn.btn-warning
            Create Deal
    %li{class: "#{'active' if params[:action] == 'index'}"}
      = link_to "Home", root_path
    %li{class: "#{'active' if params[:action] == 'details'}"}
      = link_to 'Details', details_path
    %li{class: "#{'active' if params[:action] == 'contact_us'}"}
      = link_to 'Contact Us', contact_us_path
    %li{class: "#{'active' if params[:action] == 'new'}"}
      - if user_signed_in?
        = link_to 'Log Out', destroy_user_session_path, method: 'delete'
      - else
        = link_to 'Sign In', new_user_session_path
