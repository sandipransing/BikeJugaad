!!!
%html
  %head
    %meta{charset: "utf-8"}/
    %title
      BikeJugaad
      |
      = yield(:title)
    %meta{content: "width=device-width, initial-scale=1.0", name: "viewport"}/
    %meta{content: "My bike, Rent, moterbike, Bike Rentals, Bicycle Rentals, Bike Tours, Bike", name: "description"}/
    %meta{content: "Hero, TVS, Royal Enfield, Suzuki, Yamah, Honda, Bajaj, Ducati, harley davidson", name: "author"}/
    = stylesheet_link_tag "application", :media => "all"
    = yield :stylesheets
    = javascript_include_tag "application"
    / Le HTML5 shim, for IE6-8 support of HTML5 elements
    /[if lt IE 9]
      <script src="http://html5shim.googlecode.com/svn/trunk/html5.js"></script>
    / Le fav and touch icons
    = csrf_meta_tags
    %link{:href => "/assets/favicon.ico", :rel => "shortcut icon"}/

  %body{"data-offset" => "300", "data-spy" => "scroll", "data-target" => ".subnav", class: ("sign_in_page_grey" unless user_signed_in?) }
    .container
      %header.header
        .row
          .span6
            = link_to image_tag('logo.png', alt: "BikeJugaad.com"), root_url, title: "BikeJugaad"
          .span6
            = render "layouts/navigation"
      - if notice
        %p.alert.alert-notice= notice
      - if alert
        %p.alert.alert-error= alert
      = yield
      %hr.soften/
      %footer.footer
        .container
          %p.pull-right
            %a{:href => "#"} Back to top
