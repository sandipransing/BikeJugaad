.row-fluid
  .span12
    .span4
      %img.pull-left{src: deal.photo.thumb.url.blank? ? '/assets/scooter.png' : deal.photo.thumb.url}
      %img{src: "/assets/stars-4-5.gif", class: 'image-box'}
      .button-box
        - if current_user && deal.user.id == current_user.id
          =link_to 'Update', edit_deal_path(deal), class: 'btn btn-success btn-small'
          =link_to 'Delete', deal_path(deal), method: :delete, :confirm => "Are you sure? You want to cancel this deal.", class: 'btn btn-danger btn-small'
    .span8.well
      .span12
        .caption
          %h5= "From #{deal.from.strftime('%d/%m/%Y')} â€” #{deal.till.strftime('%d/%m/%Y')}"
          .row-fluid
            .span6
              %b
                Rate Per Day:
              =raw deal.rate_per_day.blank? ? 'N/A' : "&#8377 #{deal.rate_per_day}"
            .span6
              %b
                Rate Per Hour:
              =raw deal.rate_per_hour.blank? ? 'N/A' : "&#8377 #{deal.rate_per_hour}" 
          .row-fluid
            .span12
              %b
                Bike Info:
              = deal.bike_detail
          .row-fluid
            .span12
              %b
                Location:
              = deal.location
          - unless deal.mobile.blank?
            .row-fluid
              .span12
                %img{src: '/assets/mobile.png', :style=>"width:25px;height:27px"}
                = deal.mobile
          - unless deal.phone.blank?
            .row-fluid
              .span12
                %img{src: '/assets/phone.png'}
                = deal.phone
          - unless deal.email.blank?
            .row-fluid
              .span12
                %img.img-width{src: '/assets/email.png'}
                = deal.email
          .row-fluid
            .span4
              %b
                Is Owner?
              = deal.is_owner ? 'Yes' : 'No'
            .span5
              %b
                Insurance:
              = deal.insurence ? 'Yes' : 'No'
            .span3
              %b
                PUC
              = deal.puc ? 'Yes' : 'No'
          = deal.info
