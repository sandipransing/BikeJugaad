.row-fluid
  .span12
    .span3
      %img.pull-left{src: deal.photo.thumb.url.blank? ? '/assets/default.png' : deal.photo.thumb.url}
    .span9.well
      .span10
        .caption
          %h5= "From #{deal.from.strftime('%d/%m/%Y')} â€” #{deal.till.strftime('%d/%m/%Y')}"
          .row-fluid
            .span6
              %b
                Rate Per Day:
              =raw deal.rate_per_day.blank? ? 'N/A' : "&#8377 #{deal.rate_per_day}"
            .span6
              %b
                Rate Per Hour:
              =raw deal.rate_per_hour.blank? ? 'N/A' : "&#8377 #{deal.rate_per_hour}" 
          .row-fluid
            .span6
              %b
                Bike Info:
              = deal.bike_detail
            .span6
              %b
                Location:
              = deal.location
          .row-fluid
            - unless deal.mobile.blank?
              .span3
                %img{src: '/assets/mobile.png'}
                = deal.mobile
            - unless deal.phone.blank?
              .span3
                %img{src: '/assets/phone.png'}
                = deal.phone
            - unless deal.email.blank?
              .span6
                %img{src: '/assets/email.png'}
                = deal.email
          = truncate(deal.info, length: 250)
      .span2
        %br
        %br
        %br
        %br
        %br
        =link_to 'View Details', deal_path(deal), remote: true, class: 'btn btn-primary btn-small'
